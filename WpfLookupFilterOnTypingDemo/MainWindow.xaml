<Window x:Class="WpfLookupFilterOnTypingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLookupFilterOnTypingDemo"
        mc:Ignorable="d"
        Title="Lookup Demo" Height="480" Width="640">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Numbers"/>
        <ComboBox Grid.Column="1"
                  Grid.Row="0"
                  IsEditable="True"
                  SelectedValuePath="Key"
                  DisplayMemberPath="Value"
                  ItemsSource="{Binding NumbersLookup}"
                  SelectedValue="{Binding NumberSelection}"/>
        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Text="Selected"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Text="{Binding NumberLookupSelected.Value}"/>
    </Grid>
</Window>